        <td>
          <%= form_for object, method: :delete do |f| %>
            <% if object.request_verify_book? %>
              <%= hidden_field_tag :verify_book, true %>    
            <% else %>
              <%= hidden_field_tag :extend_book, true %> 
            <% end %>
            <%= hidden_field_tag :user_id, object.user_id %>
            <%= hidden_field_tag :book_id, object.book_id %>
            <%= f.submit "Deny", class: 'btn btn-warning' %>
          <% end %>
        </td>